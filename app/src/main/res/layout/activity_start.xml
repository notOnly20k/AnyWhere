<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_start"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_fffffff"
        tools:context="com.jzdtl.anywhere.activity.StartActivity">
        <TextView
            android:id="@+id/text_start_name"
            android:text="云途"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/bule_94DEFB"
            android:textSize="20sp"/>
        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_start_pic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/yuntu_logo"
                app:civ_border_color="@color/bule_94DEFB"
                app:civ_border_width="@dimen/height_1dp"
                android:layout_centerHorizontal="true"
                android:layout_above="@id/text_start_name"
                android:layout_marginBottom="@dimen/margin_10dp"/>
</RelativeLayout>
