<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_comment_headpic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="8dp"
        />
    <TextView
        android:id="@+id/tv_comment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_comment_headpic"
        android:layout_marginTop="8dp"
        android:text="name"
        android:textColor="@color/gray_bfbfbf"
        />
    <TextView
        android:id="@+id/tv_comment_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_comment_headpic"
        android:layout_below="@id/tv_comment_name"
        android:text="内容"
        android:layout_marginTop="8dp"
        />
    <TextView
        android:id="@+id/tv_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_comment_headpic"
        android:layout_below="@id/tv_comment_info"
        android:text="time"
        android:layout_marginTop="8dp"
        android:textSize="10sp"
        />

</RelativeLayout>
