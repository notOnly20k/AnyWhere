<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_modifyinfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.jzdtl.anywhere.activity.ModifyInfoActivity">
        <include layout="@layout/base_tool_bar"/>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_fffffff"
                android:layout_marginTop="10dp">
            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_modify_head"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    app:civ_border_color="@color/white_fffffff"
                    app:civ_border_width="1dp"
                    android:src="@mipmap/yuntu_logo"
                    android:scaleType="centerCrop"/>
            <ImageView
                    android:id="@+id/image_modify_go"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/go"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/image_modify_go"
                    android:textSize="14sp"
                    android:text="修改头像"
                    android:textColor="@color/gray_bfbfbf"/>
        </RelativeLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white_fffffff"
                android:orientation="vertical">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="昵称"
                            android:textSize="14sp"
                            android:padding="5dp"/>
                    <EditText
                            android:id="@+id/edit_modify_nickname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:background="@null"
                            android:textSize="14sp"
                            android:padding="5dp"
                            android:hint="填写昵称"/>
                </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="性别"
                        android:textSize="14sp"
                        android:padding="5dp"/>
                <TextView
                        android:id="@+id/text_modify_sex"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:background="@null"
                        android:textSize="14sp"
                        android:padding="5dp"
                        android:hint="填写性别"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="邮箱"
                        android:textSize="14sp"
                        android:padding="5dp"/>
                <EditText
                        android:id="@+id/edit_modify_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:background="@null"
                        android:textSize="14sp"
                        android:padding="5dp"
                        android:hint="填写邮箱"/>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>
