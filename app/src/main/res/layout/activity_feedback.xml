<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_feedback"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.jzdtl.anywhere.activity.FeedBackActivity">
        <include layout="@layout/base_tool_bar"/>
        <EditText
                android:id="@+id/edit_feedback_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@color/white_fffffff"
                android:scrollbars="vertical"
                android:lines="8"
                android:hint="填写反馈"
                android:gravity="left"/>
        <EditText
                android:id="@+id/edit_feedback_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_fffffff"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:hint="请留下您的联系方式：QQ或者Email"/>
</LinearLayout>
