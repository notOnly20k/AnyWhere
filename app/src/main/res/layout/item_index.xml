<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <include
        android:id="@+id/layout_index_head"
        layout="@layout/item_index_head"/>
    <ImageView
        android:id="@+id/img_index_fristpic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

   <GridView
       android:id="@+id/grid_index_pics"
       android:layout_width="match_parent"
       android:layout_height="80dp">
   </GridView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:maxLines="10"
        android:text="内容"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_bfbfbf"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/img_index_like"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/icon_like_normal"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/tv_index_like"
            android:layout_width="15dp"
            android:layout_height="15dp" />
        <ImageView
            android:id="@+id/img_index_comment"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/icon_comment_normal"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/tv_index_comment"
            android:layout_width="15dp"
            android:layout_height="15dp" />
        <ImageView
            android:id="@+id/img_index_collect"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/icon_fav_normal"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/tv_index_collect"
            android:layout_width="15dp"
            android:layout_height="15dp" />
        <View
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_share_item_normal"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
